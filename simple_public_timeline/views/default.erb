            <div class="user_list">
            <% @tweets.each do |tweet| %>
                <img src=<%=tweet.user.profile_image_url%> alt='profile_img' height='30px' width='30px'/>
                <%= tweet.user.name %>
                <br>
            <% end %>
            </div>
        </div>
    </div>

